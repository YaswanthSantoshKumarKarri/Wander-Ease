package com.example.wanderease.controller;

import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.example.wanderease.entity.Reviews;
import com.example.wanderease.service.ReviewsService;

@RestController
@RequestMapping("/reviews/api/")
public class ReviewsController {
	
	private Reviews reviewsObj;
	private ReviewsService reviewsServiceObj;
	
	@PostMapping("/createReview")
	public void create(@RequestBody Reviews reviewData) {
		reviewsServiceObj.createReview(reviewData);
	}

}
